<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elevenfifty.www.elevenchat" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.Camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/button"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        <activity
            android:name="com.elevenfifty.www.elevenchat.ChatPagerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.elevenfifty.www.elevenchat.ConfirmImageActivity"
            android:label="@string/title_activity_confirm_image"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.elevenfifty.www.elevenchat.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
              <activity
            android:name="com.elevenfifty.www.elevenchat.ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
    </application>

</manifest>
